[oh-my-zsh]
    hide-dirty = 1

[alias]
    co = checkout
    ci = commit
    st = status
    br = branch
    df = diff
    lp = log --pretty=oneline --abbrev-commit
    lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit

[commit]
    template = ~/.gitmessage

[pull]
    rebase = true

[push]
    default = simple

[diff]
    tool = vim

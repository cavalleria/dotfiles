# Conda
# >>> conda initialize >>>
# !! Contents within this block are managed by 'conda init' !!
if [[ "$(uname)" == "Linux" ]]; then
    __conda_setup="$('/home/yaobin.li/soft/miniconda3/bin/conda' 'shell.zsh' 'hook' 2> /dev/null)"
    if [ $? -eq 0 ]; then
        eval "$__conda_setup"
    else
        if [ -f "/home/yaobin.li/soft/miniconda3/etc/profile.d/conda.sh" ]; then
            . "/home/yaobin.li/soft/miniconda3/etc/profile.d/conda.sh"
        else
            export PATH="/home/yaobin.li/soft/miniconda3/bin:$PATH"
        fi
    fi
elif [[ "$(uname)" == "Darwin" ]]; then
    __conda_setup="$('/Users/apple/workspace/miniconda3/bin/conda' 'shell.zsh' 'hook' 2> /dev/null)"
    if [ $? -eq 0 ]; then
        eval "$__conda_setup"
    else
        if [ -f "/Users/apple/workspace/miniconda3/etc/profile.d/conda.sh" ]; then
            . "/Users/apple/workspace/miniconda3/etc/profile.d/conda.sh"
        else
            export PATH="/Users/workspace/soft/miniconda3/bin:$PATH"
        fi
    fi
fi
unset __conda_setup
# <<< conda initialize <<<


#----------
# => PATH related
#----------

#export PATH=$CMAKE:$ANDROID_SDK/platform-tools:$PATH
if [[ "$(uname)" == "Linux" ]]; then
    CHEAT_PATH=$HOME/soft/cheat
    export PATH=$CHEAT_PATH:$PATH
elif [[ "$(uname)"=="Darwin" ]]; then
    export HOMEBREW_BOTTLE_DOMAIN=https://mirrors.ustc.edu.cn/homebrew-bottles
    CHEAT_PATH=$HOME/soft/cheat
    CMAKE_ROOT=$HOME/workspace/3rdlibs/cmake-3.19.1-Darwin-x86_64/CMake.app/Contents/bin
    OPENCV=$HOME/soft/opencv4/opencv/build
    ANDROID_HOME=$HOME/Library/Android/sdk
    JAVA_HOME=/Library/Java/JavaVirtualMachines/jdk1.8.0_172.jdk/Contents/Home

    export PATH=$CHEAT_PATH:$CMAKE_ROOT:$OPENCV/include:$ANDROID_HOME/tools:$ANDROID_HOME/platform-tools:$PATH
    export PATH=$JAVA_HOME:$PATH
fi



#----------
# => LD_LIBRARY_PATH, LD_PRELOAD
#----------

# These env vars are for customized lib finding path
#export LD_LIBRARY_PATH=$CUDA_LIBDIR:$OPENCV_LIBDIR:$LD_LIBRARY_PATH
if [[ "$(uname)" == "Linux" ]]; then
    :
elif [[ "$(uname)" == "Darwin" ]]; then
    export LD_LIBRARY_PATH=$OPENCV/lib:$LD_LIBRARY_PATH
fi
